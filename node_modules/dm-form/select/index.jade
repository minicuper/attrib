index(bem='Input' arrays='option/options' attributes='label description')
  view(is='{{ _layout }}' inherit)

pure:
  view.-pure(is='input' extraClass='{{ @class }}' inherit)

columns:(bem='Input')
  .&.-columns.-select(class="{{if @class}}{{@class}}{{/}} {{if errors}}-error{{/}}")
    view(is='inputErrors')
    .&-left
      if @label
        label.&-label {{ @label }}
    .&-right
      view(is='input' inherit)
      if @description
        .&-description {{ @description }}

table:(bem='Input')
  .&.-columns.-select.-table(class="{{if @class}}{{@class}}{{/}} {{if errors}}-error{{/}}")
    view(is='inputErrors')
    .&-left
      if @label
        label.&-label {{ @label }}
      if @description
        .&-description {{ @description }}
    .&-right
      view(is='input' inherit)

input:(bem='Input')
  if @readonly
    view(is='input:readonly' inherit)
  else
    view(is='input:edit' inherit)

input:readonly:(bem='Input')
  .&-input.-select.-readonly(class='{{ @extraClass }}')
    | {{ ifNull(getNameByValue(value, @options), '-') }}

input:edit:(bem='Input')
  select.&-input.-select(
      class='{{ @extraClass }}'
      disabled='{{ @disabled }}'
      on-focus="emit('active')"
      as='input'
  )
    if @default === undefined || @default === null
      option(selected='{{ value === undefined }}')
        | -
    each @options as #option
      option(selected='{{ value === optionValue(#option, @options) }}')
        | {{ optionName(#option) }}
