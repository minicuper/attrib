index(bem='Input' attributes='label description')
  view(is='{{ _layout }}' inherit)

pure:
  view.-pure(is='input' extraClass='{{ @class }}' inherit)

columns:(bem='Input')
  .&.-columns.-checkbox(class="{{if @class}}{{@class}}{{/}}{{if errors}}-error{{/}}")
    view(is='inputErrors')
    .&-left
    .&-right
      label.&-row
        view(is='input' inherit)
        if @label
          .&-label {{ @label }}
      if @description
        .&-description {{ @description }}

input:(bem='Input')
  if @readonly
    view(is='input:readonly' inherit)
  else
    view(is='input:edit' inherit)

input:readonly:(bem='Input')
  .&-input.-checkbox.-readonly(class='{{ @extraClass }}')
    | {{ value ? '✓' : '✗' }}

input:edit:(bem='Input')
  input.&-input.-checkbox(class='{{ @extraClass }}'
      type='checkbox'
      checked='{{ value }}'
      disabled='{{ @disabled }}'
      on-focus="emit('active')"
      as='input'
  )
