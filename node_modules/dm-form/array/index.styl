C = '.InputArray'

_gutter = 10px
_gutterX = 10px
_gutterY = 5px
_addButton = 20px
_borderRadius = 4px

_blue = rgba(#3e4c8e, 0.9)
_orange = #fc6321
_gray = #bbb

{C}
  margin-top _gutter

  &-item
    position relative

    &:not(.-collapsed)
      background-color rgba(black, 0.01)
      border 1px solid rgba(black, 0.1)
      border-radius _borderRadius
      margin-bottom _gutter + _addButton

  &-delete
    position absolute
    right 0
    top 0
    line-height 26px
    width 26px
    text-align center
    text-decoration none
    color #999
    transition all 0.2s
    &:hover
      background-color #f44336
      color white

  &-add
    width auto
    display block
    margin-left auto
    margin-right _gutter

  &-item + &-add
    margin-top 10px

  &-addPlus, &-duplicate, &-buttonDelete
    text-decoration none
    display block
    _green = hsl(90, 50%, 50%)
    background-color rgba(_green, 0.1)
    transition all 0.3s
    color rgba(_green, 0.5)
    &:before
      content '+'
      display block
      text-align center
      font-size _addButton
      line-height 1
    &:hover
      background-color rgba(_green, 0.4)
      color rgba(_green, 1)
    &.-block
      margin-top _gutterY
      margin-bottom _gutterY
    &.-implicit
      width 40px
      display inline-block
      position absolute
      right _borderRadius
      top 100%

  &-duplicate
    margin-left 5px
    _blue = hsl(180, 50%, 50%)
    background-color rgba(_blue, 0.1)
    color rgba(_blue, 0.5)
    &:before
      content 'D'
    &:hover
      background-color rgba(_blue, 0.4)
      color rgba(_blue, 1)

  &-buttonDelete
    margin-left 5px
    _red = hsl(0, 50%, 50%)
    background-color rgba(_red, 0.1)
    color rgba(_red, 0.5)
    &:before
      content 'âœ•'
    &:hover
      background-color rgba(_red, 0.4)
      color rgba(_red, 1)

  &-expander
    text-decoration none
    line-height 1
    display flex
    align-items center
    justify-content center

  &-clipboard
    border 2px solid _gray
    padding 2px
    border-radius 8px
    margin-bottom 10px
    align-items center
    min-height 36px
    flex-wrap wrap
    .btn
      margin-left 10px
    &:before
      border-radius 4px 0 0 4px
      content 'clipboard'
      text-transform uppercase
      font-size 12px
      align-self stretch
      background-color _gray
      display flex
      align-items center
      color white
      padding-left 5px
      padding-right 5px
      margin -2px
      height 32px
      float left
    &.-active
      border-color _orange
      &:before
        background-color _orange

  &-clipboardPreview
    min-width 100%
    display flex
    margin 4px 2px 2px
    flex-wrap wrap

  &-clipboardPreviewItem
    flex-shrink 0
    background-color _blue
    font-size 14px
    line-height 1
    padding-top 2px
    padding-bottom 4px
    padding-left 4px
    padding-right @padding-left
    border-radius 2px
    color white
    margin-right 2px
    margin-top 2px

  &-clipboardInfo
    color _gray
    float left
    margin-left 8px
    line-height 28px

  &-controls
    margin-bottom 10px

  &-importBtn
    padding-right 5px

{C}-item:not(.-collapsed)
  {C}-expander
    border 1px solid rgba(black, 0.01)
    background _blue
    color white
    border-bottom-left-radius (_borderRadius - 1)
    border-bottom-right-radius @border-bottom-left-radius
    transition all 0.3s
    &:hover
      background lighten(_blue, 30%)

{C}-item.-collapsed

  display flex
  margin-bottom _gutter
  align-items center

  > *
    min-height 24px

  {C}-itemControls
    flex-shrink 0
    display flex
    align-items center

  {C}-itemInner
    flex 1
    color inherit
    text-decoration none
    display flex

  {C}-check
    margin-right 3px

  {C}-addPlus, {C}-duplicate, {C}-buttonDelete
    width 26px
    display flex
    align-items center
    justify-content center

  {C}-name
    flex-shrink 0
    background-color _blue
    color white
    line-height 18px
    padding-left 6px
    padding-right @padding-left
    border-radius 4px
    display flex
    align-items center
    margin-right 6px
    width 140px
    font-size 14px
    padding-top 0
    padding-bottom 2px
    height 24px

  {C}-description
    flex 1
    display flex
    align-items center
    font-size 16px

  {C}-type
    flex-shrink 0
    width 80px
    display flex
    align-items center
    justify-content center
    margin-right 6px
    font-weight bold
    color _blue
    font-size 14px

  {C}-name, {C}-description, {C}-type
    span
      white-space nowrap
      text-overflow ellipsis
      overflow hidden

  {C}-itemInner:hover
    transition all 0.3s
    {C}-name
      background lighten(_blue, 30%)
    {C}-description
      color _blue
    {C}-type
      color lighten(_blue, 30%)

{C} {C}
  {C}-item
    margin-left _gutter
    margin-right _gutter
  {C}-addPlus:not(.-implicit)
    margin-left _gutter
    margin-right _gutter
