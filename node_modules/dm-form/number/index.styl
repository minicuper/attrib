C = '.Input'

{C}
  &-numberWrapper
    position relative
    display flex
    align-items center
    flex-shrink 0
    width 100%
  &-numberUnits
    font-size 16px
    margin-left 0.25em
  div&-incorrectValue
    position absolute
    left 7em
    top 0

  &.-no-spinner
    input[type=number]::-webkit-outer-spin-button,
    input[type=number]::-webkit-inner-spin-button
      -webkit-appearance none
      margin 0