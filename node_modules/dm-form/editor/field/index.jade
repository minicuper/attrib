index:(bem='FormEditorField')
  .&-item.-collapsed
    .&-itemControls
      input.&-check(type='checkbox' checked='{{ checked[#index] }}')
      .&-index
        select
          each indexes as #i
            option(selected='{{ changeOrder(#index, #i) }}') {{ #i + 1 }}
    .&-itemInner(on-click='toggle()')
      .&-name
        if editing
          input.&-nameInput(value='{{name}}' on-click="clickOnNameInput($event)")
          button.&-nameOk(on-click='saveEditing($event)' disabled='{{!checkIfNameIsCorrect(itemId, name)}}') ✔
          button.&-nameCancel(on-click='cancelEditing($event)') ✘
        else
          span {{ itemId }}
          .edit
            a(on-click='startEditing($event)')
      .&-type
        span {{ getType(item) }}

      if getDescription(item) as #description
        .&-description
          span {{ #description }}

    .&-itemControls
      a.&-addPlus(on-click="emit('add', #index)" title='Add new into this position')
      a.&-duplicate(on-click="emit('duplicate', itemId, #index)" title='Duplicate')
      a.&-buttonDelete(on-click="emit('remove', itemId)" tabindex='-1')

  if expand
    .&-item
      view(name='dm-form:{{ items.input }}' meta='{{ items }}' value='{{ item }}')