C = '.FormEditorField'

_gutter = 10px
_gutterX = 10px
_gutterY = 5px
_addButton = 20px
_borderRadius = 4px

_blue = rgba(#3e4c8e, 0.9)
_orange = #fc6321
_gray = #bbb

{C}
  &-item
    position relative

    &:not(.-collapsed)
      background-color rgba(black, 0.01)
      border 1px solid rgba(black, 0.1)
      border-radius _borderRadius
      margin-bottom _gutter + _addButton

  &-delete
    position absolute
    right 0
    top 0
    line-height 26px
    width 26px
    text-align center
    text-decoration none
    color #999
    transition all 0.2s
    &:hover
      background-color #f44336
      color white

  &-add
    width auto
    display block
    margin-left auto
    margin-right _gutter

  &-item + &-add
    margin-top 10px

  &-addPlus, &-duplicate, &-buttonDelete
    text-decoration none
    display block
    _green = hsl(90, 50%, 50%)
    background-color rgba(_green, 0.1)
    transition all 0.3s
    color rgba(_green, 0.5)
    &:before
      content '+'
      display block
      text-align center
      font-size _addButton
      line-height 1
    &:hover
      background-color rgba(_green, 0.4)
      color rgba(_green, 1)
    &.-block
      margin-top _gutterY
      margin-bottom _gutterY
    &.-implicit
      width 40px
      display inline-block
      position absolute
      right _borderRadius
      top 100%

  &-duplicate
    margin-left 5px
    _blue = hsl(180, 50%, 50%)
    background-color rgba(_blue, 0.1)
    color rgba(_blue, 0.5)
    &:before
      content 'D'
    &:hover
      background-color rgba(_blue, 0.4)
      color rgba(_blue, 1)

  &-buttonDelete
    margin-left 5px
    _red = hsl(0, 50%, 50%)
    background-color rgba(_red, 0.1)
    color rgba(_red, 0.5)
    &:before
      content 'âœ•'
    &:hover
      background-color rgba(_red, 0.4)
      color rgba(_red, 1)

{C}-item.-collapsed

  display flex
  margin-bottom _gutter
  align-items center

  > *
    min-height 24px

  &:hover .edit
    opacity 1

  .edit
    transition all 0.3s
    opacity 0
    position absolute
    right -4px
    top 2px

    a
      padding-left 28px

  .edit a:before
    content:"";
    position:absolute;
    top:50%;
    left:3px;
    width:5px;
    height:5px;
    margin-top:2px;
    background: #fff;
    transform:skew(-10deg, -10deg)


  .edit a:after
    content:"";
    position:absolute;
    top:50%;
    left 3px
    width 13px
    height 6px
    border-left 1px solid _blue
    margin-top: -3px
    background: #fff;
    transform rotate(-45deg)


  .edit a:hover:before
  .edit a:focus:before
  .edit a:active:before
  .edit a:hover:after
  .edit a:focus:after
  .edit a:active:after
    background #ddd

  {C}-itemControls
    flex-shrink 0
    display flex
    align-items center

  {C}-itemInner
    flex 1
    color inherit
    text-decoration none
    display flex

  {C}-check
    margin-right 3px

  {C}-addPlus, {C}-duplicate, {C}-buttonDelete
    width 26px
    display flex
    align-items center
    justify-content center

  {C}-name
    position relative
    flex-shrink 0
    background-color _blue
    color white
    line-height 18px
    padding-left 6px
    padding-right @padding-left
    border-radius 4px
    display flex
    align-items center
    margin-right 6px
    width 200px
    font-size 14px
    padding-top 0
    padding-bottom 2px
    height 24px

  {C}-nameInput
    flex 1
    margin-right 4px

  button{C}-nameOk
    cursor pointer
    border none
    background transparent
    text-decoration none
    margin 3px
    color lightgreen

    &:disabled
      color gray

  button{C}-nameCancel
    cursor pointer
    border none
    background transparent
    text-decoration none
    margin 3px
    color red

  {C}-description
    flex 1
    display flex
    align-items center
    font-size 16px

  {C}-type
    flex-shrink 0
    width 80px
    display flex
    align-items center
    justify-content center
    margin-right 6px
    font-weight bold
    color _blue
    font-size 14px

  {C}-name, {C}-description, {C}-type
    span
      white-space nowrap
      text-overflow ellipsis
      overflow hidden

  {C}-itemInner
    cursor pointer

  {C}-itemInner:hover
    transition all 0.3s
    {C}-name
      background lighten(_blue, 30%)
      &:hover
        transition all 0.3s
        background _blue

    {C}-description
      color _blue
    {C}-type
      color lighten(_blue, 30%)
