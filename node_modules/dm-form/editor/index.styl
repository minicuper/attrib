C = '.FormEditor'

_gutter = 10px
_gutterX = 10px
_gutterY = 5px
_addButton = 20px
_borderRadius = 4px

_blue = rgba(#3e4c8e, 0.9)
_orange = #fc6321
_gray = #bbb

{C}
  margin-top _gutter




  &-expander
    text-decoration none
    line-height 1
    display flex
    align-items center
    justify-content center

  &-clipboard
    border 2px solid _gray
    padding 2px
    border-radius 8px
    margin-bottom 10px
    align-items center
    min-height 36px
    flex-wrap wrap
    .btn
      margin-left 10px
    &:before
      border-radius 4px 0 0 4px
      content 'clipboard'
      text-transform uppercase
      font-size 12px
      align-self stretch
      background-color _gray
      display flex
      align-items center
      color white
      padding-left 5px
      padding-right 5px
      margin -2px
      height 32px
      float left
    &.-active
      border-color _orange
      &:before
        background-color _orange

  &-clipboardPreview
    min-width 100%
    display flex
    margin 4px 2px 2px
    flex-wrap wrap

  &-clipboardPreviewItem
    flex-shrink 0
    background-color _blue
    font-size 14px
    line-height 1
    padding-top 2px
    padding-bottom 4px
    padding-left 4px
    padding-right @padding-left
    border-radius 2px
    color white
    margin-right 2px
    margin-top 2px

  &-clipboardInfo
    color _gray
    float left
    margin-left 8px
    line-height 28px

  &-controls
    margin-bottom 10px

  &-importBtn
    padding-right 5px

  &-addPlus
    text-decoration none
    display block
    _green = hsl(90, 50%, 50%)
    background-color rgba(_green, 0.1)
    transition all 0.3s
    color rgba(_green, 0.5)
    &:before
      content '+'
      display block
      text-align center
      font-size _addButton
      line-height 1
    &:hover
      background-color rgba(_green, 0.4)
      color rgba(_green, 1)
    &.-block
      margin-top _gutterY
      margin-bottom _gutterY
    &.-implicit
      width 40px
      display inline-block
      position absolute
      right _borderRadius
      top 100%

{C}-item:not(.-collapsed)
  {C}-expander
    border 1px solid rgba(black, 0.01)
    background _blue
    color white
    border-bottom-left-radius (_borderRadius - 1)
    border-bottom-right-radius @border-bottom-left-radius
    transition all 0.3s
    &:hover
      background lighten(_blue, 30%)


{C} {C}
  {C}-item
    margin-left _gutter
    margin-right _gutter

  {C}-addPlus:not(.-implicit)
    margin-left _gutter
    margin-right _gutter
