@require '../radio/constants'

C = '.Input'

{C}.-table

  display flex
  flex-wrap wrap

  {C}-left
    flex-basis _leftWidth
    flex-shrink 0
    flex-grow 0

  {C}-right
    flex 1
    display block
    min-width _rightWidth

  {C}-row
    flex 1
    display flex
    justify-content center

    span
      display none
