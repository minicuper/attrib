index(bem='Input')
  view(is='{{ _layout }}' inherit)

pure:
  view.-pure(is='input' extraClass='{{ @class }}' inherit)

columns:(bem='Input')
  .&.-columns.-checkbox.-multiple(class="{{if @class}}{{@class}}{{/}}{{if errors}}-error{{/}}")
    view(is='inputErrors')
    .&-left
      if @label
        label.&-label {{ @label }}
    .&-right
      if @description
        .&-description {{ @description }}
      view(is='input' inherit)

table:(bem='Input')
  .&.-columns.-checkbox.-multiple.-table(class="{{if @class}}{{@class}}{{/}}{{if errors}}-error{{/}}")
    view(is='inputErrors')
    .&-left
      if @label
        label.&-label {{ @label }}
      if @description
        .&-description {{ @description }}
    .&-right
      view(is='input' inherit)

input:(bem='Input')
  if @readonly
    view(is='input:readonly' inherit)
  else
    view(is='input:edit' inherit)

input:readonly:(bem='Input')
  if @options
    .&-input.-checkbox.-readonly(class='{{ @extraClass }}')
      | {{ getCheckedOptions(value, @options) }}

input:edit:(bem='Input')
  if @options
    .&-checkboxWrapper(
        class='{{if @horizontal}}-horizontal{{/}}'
        on-click="emit('active')"
        as='input'
    )
      each @options as #option
        label.&-row
          input.&-input.-checkbox(class='{{ @extraClass }}'
              type='checkbox'
              checked='{{ setValue(value, #option, options) }}'
              disabled='{{ @disabled }}'
          )
          span {{ optionName(#option) }}
