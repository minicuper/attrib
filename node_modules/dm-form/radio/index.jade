index(bem='Input')
  view(is='{{ _layout }}' inherit)

pure:
  view.-pure(is='input' extraClass='{{ @class }}' inherit)

columns:(bem='Input')
  .&.-columns.-radio(class="{{if @class}}{{@class}}{{/}}{{if errors}}-error{{/}}")
    view(is='inputErrors')
    .&-left
      if @label
        label.&-label {{ @label }}
    .&-right
      view(is='input' inherit)
      if @description
        .&-description {{ @description }}

table:(bem='Input')
  .&.-columns.-radio.-table(class="{{if @class}}{{@class}}{{/}}{{if errors}}-error{{/}}")
    view(is='inputErrors')
    .&-left
      if @label
        label.&-label {{ @label }}
      if @description
        .&-description {{ @description }}
    .&-right
      view(is='input' inherit)

input:(bem='Input')
  if @readonly
    view(is='input:readonly' inherit)
  else
    //- Compact view of showing radio as select. Useful for displaying it
    //- inside table cells.
    if @compact
      view(is='dm-form:select:input:edit' inherit)
    else
      view(is='input:edit' inherit)

input:readonly:(bem='Input')
  .&-input.-radio.-readonly(class='{{ @extraClass }}')
    | {{ ifNull(getNameByValue(value, @options), '-') }}

input:edit:(bem='Input')
  .&-input.-radio(
      class='{{ @extraClass }}{{if @horizontal}} -horizontal{{/}}'
      on-click="emit('active')"
      as='input'
  )
    each @options as #option
      label
        input(
          type='radio'
          disabled='{{ @disabled }}'
          checked='{{ value === optionValue(#option, @options) }}'
        )
        span {{ optionName(#option) }}
