@require './constants'

_leftWidth = $DMForm-radio-leftWidth
_rightWidth = $DMForm-radio-rightWidth

C = '.Input'

{C}.-radio:not(.-table)
  {C}-input:not(.-horizontal)
    flex-direction column
    align-items flex-start

{C}-input.-radio
  display flex

  &.-horizontal
    flex-wrap wrap

    label
      margin-right 16px

// FIXME: Make the column layout generic
{C}.-table.-table
  display flex
  flex-wrap wrap
  {C}-left
    flex-basis _leftWidth
    flex-shrink 0
    flex-grow 0
  {C}-right
    flex 1
    display block
    min-width _rightWidth
  {C}-input
    display flex
    > *
      flex 1
      display flex
      justify-content center
    input
      margin-right 0
      bottom auto
    span
      display none
