index(bem='Input' attributes='label description')
  view(is='{{ _layout }}' inherit)

pure:
  view.-pure(is='input' extraClass='{{ @class }}' inherit)

columns:(bem='Input')
  .&.-columns.-text(class="{{if @class}}{{@class}}{{/}}{{if errors}}-error{{/}}")
    view(is='inputErrors')
    .&-left
      if @label
        label.&-label(for='{{ unescaped uniqId }}') {{ @label }}
    .&-right
      view(is='input' inherit)
      if @description
        .&-description {{ @description }}

input:(bem='Input')
  if @readonly
    view(is='input:readonly' inherit)
  else
    view(is='input:edit' inherit)

input:readonly:(bem='Input')
  .&-input.-text.-readonly(class='{{ @extraClass }}')
    | {{ _value || '&nbsp;' }}

input:edit:(bem='Input')
  input.&-input.-text(class='{{ @extraClass }}'
      id='{{ unescaped uniqId }}'
      type='text'
      value='{{ _value }}'
      disabled='{{ @disabled }}'
      placeholder="{{ @placeholder || 'write here' }}"
      on-blur='lazySet()'
      on-focus="emit('active')"
      as='input'
  )
