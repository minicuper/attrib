C = '.Input'

{C}
  display flex
  &-left
    flex 1
  &-right
    flex 2
  &-right
    padding 10px
  &-left
    _padding = 10px
    padding-left _padding
    padding-right _padding
    &:not(:empty)
      padding-top _padding
      padding-bottom _padding
  &-description:not(:empty)
    margin-top 5px
    width 100%
  &-row
    display flex
    align-items center

// Light Theme [Columns]
{C}.-columns
  {C}-left
    font-size 14px
    font-weight bold
    color #999
    display flex
    align-items center
    flex 1
    min-width 160px
    max-width 220px
    //&:after
    //  content ':'
  {C}-right
    display flex
    flex-wrap wrap
    align-items center
    font-size 12px
  {C}-description
    color #3e3f70
  {C}-input:focus ~ {C}-description
    color green
