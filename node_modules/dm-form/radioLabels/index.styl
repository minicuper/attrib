@require '../radio/constants'

_leftWidth = $DMForm-radio-leftWidth
_rightWidth = $DMForm-radio-rightWidth

C = '.InputRadioLabels'

{C}
  display flex
  flex-wrap wrap
  font-size 12px
  &-left
    flex-basis _leftWidth
    flex-shrink 0
    flex-grow 0
  &-right
    min-width _rightWidth
    flex 1
    display flex
    align-items flex-end
  &-item
    font-weight 600
    flex 1
    text-align center
    align-items flex-end
    line-height 1.2
    display flex
    justify-content center
  &-transformBox.-rotate
    transform rotate(-70deg)
    max-width 80px
    margin 10px 0
    word-wrap normal
    position relative
    z-index 1
