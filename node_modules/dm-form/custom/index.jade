index(bem='Input' attributes='label description')

  if _layout === 'pure'
    .&-input.-custom(class="{{if @class}}{{@class}}{{/}}")
      | {{ @content }}

  else if _layout === 'columns'
    .&.-columns.-custom(class="{{if @class}}{{@class}}{{/}}")
      .&-left
        label.&-label {{ @label }}
      .&-right
        .&-input.-custom
          | {{ @content }}
        if @description
          .&-description {{ @description }}
